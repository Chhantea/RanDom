<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Item name</th>
      <th>Price tag</th>
      <th>Badge</th>
<!--       <th>Image</th>
      <th>Description</th>
      <th>Additional information</th> -->
      <th>Inner tag seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.tag %></td>
        <td><%= product.item_name %></td>
        <td><%= product.price_tag %></td>
        <td><%= product.badge %></td>
        <!-- <td><%= product.image %></td>
        <td><%= product.description %></td>
        <td><%= product.additional_information %></td> -->
        <td><%= product.inner_tag_seller %></td>
        <td><%= link_to 'Show', product, class: 'btn-sm btn-indigo' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: 'btn-sm btn-indigo' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn-sm btn-indigo' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-indigo' %>
