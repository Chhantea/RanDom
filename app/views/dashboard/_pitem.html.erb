<% @products.each do |pr| %>
          <!--Grid column-->
          <div class="col-lg-3 col-md-6 mb-4">

            <!--Card-->
            <div class="card" id="">

              <!--Card image-->
              <div class="view overlay">
                <img src=<%= pr.image%> class="card-img-top" alt="">
                <a>
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
              <!--Card image-->

              <!--Card content-->
              <div class="card-body text-center">
                <!--Category & Title-->
                  <h5><%= link_to (pr.tag),dashboard_product_path(pr.id, pr.item_name), remote: true,class: "grey-text" %></h5>
                 
                </a>
                <h5>
                  <strong>
                    <%= link_to (pr.item_name),dashboard_product_path(pr.id, pr.item_name),class: "dark-grey-text" %>
                     <span class="badge badge-pill danger-color"><%=pr.badge%></span>
                  </strong>
                </h5>

                <h4 class="font-weight-bold blue-text">
                  <strong><%=pr.price_tag%></strong>
                </h4>

              </div>
              <!--Card content-->

            </div>
            <!--Card-->

          </div>
          <!--Grid column-->
         <%end%>